<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.acequia_innova.accesoremoto15.Main"
    android:background="@drawable/aca_recortada_fondo">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_Clave"
        android:layout_alignBaseline="@+id/textView_Clave"
        android:layout_alignBottom="@+id/textView_Clave"
        android:background="#fefce9"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:textCursorDrawable="@null"
        android:textColorHint="@android:color/white"
        android:elevation="1dp"
        android:layout_toRightOf="@+id/checkBox"
        android:layout_toEndOf="@+id/checkBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/textView_Mensajes"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="18sp"
        android:background="#fefce9"
        android:text="Mensajes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_Equipos"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/butt_DatosActuales"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="?attr/colorButtonNormal"
        android:foreground="@android:color/background_light" />

    <Button
        android:text="BUSCAR EQUIPOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butt_BuscoEquipos"
        android:layout_alignBaseline="@+id/butt_OK"
        android:layout_alignBottom="@+id/butt_OK"
        android:layout_alignLeft="@+id/butt_DatosActuales"
        android:layout_alignStart="@+id/butt_DatosActuales"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="CLAVE:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Clave"
        android:background="?attr/colorBackgroundFloating"
        android:layout_below="@+id/editTxt_Usu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:textStyle="bold"
        android:layout_alignRight="@+id/textView_Usu"
        android:layout_alignEnd="@+id/textView_Usu" />

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butt_OK"
        android:layout_marginTop="80dp"
        android:onClick="onClicOk"
        android:layout_below="@+id/editText_Clave"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="DATOS ACTUALES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butt_DatosActuales"
        android:layout_below="@+id/butt_BuscoEquipos"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTxt_Usu"
        android:background="#fefce9"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:textCursorDrawable="@null"
        android:textColorHint="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="1dp"
        android:layout_alignLeft="@+id/editText_Clave"
        android:layout_alignStart="@+id/editText_Clave" />

    <CheckBox
        android:text="Es Administrador  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:checked="true"
        android:textColor="@android:color/holo_green_dark"
        android:background="#fefce9"
        android:textColorLink="@android:color/holo_blue_bright"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/editText_Clave"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="USUARIO:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Usu"
        android:background="?attr/colorButtonNormal"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/editTxt_Usu"
        android:layout_alignBottom="@+id/editTxt_Usu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="SALIR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttSalir"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
